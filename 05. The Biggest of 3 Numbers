/*Problem 5. The Biggest of 3 Numbers

    Write a program that finds the biggest of three numbers.
*/

using System;

class Program
{
    static void Main()
    {
        Console.Write("Write the first number: a = ");
        double a = double.Parse(Console.ReadLine());

        Console.Write("Write the second number: b = ");
        double b = double.Parse(Console.ReadLine());

        Console.Write("Write the third number: c = ");
        double c = double.Parse(Console.ReadLine());

        if (a > b && a > c)
        {
            Console.WriteLine("The biggest number is a = {0}", a);
        }
        else if (a < b && b > c)
        {
            Console.WriteLine("The biggest number is b = {0}", b);
        }
        else if (a < c && b < c)
        {
            Console.WriteLine("The biggest number is c = {0}", c);
        }
    }
}

