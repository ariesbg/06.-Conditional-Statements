/*Problem 2. Bonus Score

    Write a program that applies bonus score to given score in the range [1â€¦9] by the following rules:
        If the score is between 1 and 3, the program multiplies it by 10.
        If the score is between 4 and 6, the program multiplies it by 100.
        If the score is between 7 and 9, the program multiplies it by 1000.
        If the score is 0 or more than 9, the program prints â€œinvalid scoreâ€.
*/

using System;

class BonusScore
{
    static void Main()
    {
        Console.WriteLine("Write a number between [1...9]: ");
        int number = int.Parse(Console.ReadLine());

        {
            if (number >= 1 && number <= 3)
            {
                int result = number * 10;
                Console.WriteLine("The result is: {0}", result);
            }

            else if (number >= 4 && number <= 6)
            {
                int result2 = number * 100;
                Console.WriteLine("The result is: {0}", result2);
            }

            else if (number >= 7 && number <= 9)
            {
                int result3 = number * 1000;
                Console.WriteLine("The result is: {0}", result3);
            }
            else
            {
                Console.WriteLine("invalid score");
            }

        }
    }
}
